<header>
  <h1>Companies</h1>
  <% admins_only do %>
    <ul class="actions">
      <li>
        <%= link_to "New Company", new_admin_company_path, class: "new" %>
      </li>
    </ul>
  <% end %>
</header>

<div id="companies">
  <% @companies.each do |company| %>
    <h2><%= link_to company.name, company %></h2>
    <p><%= company.description %></p>
  <% end %>
</div>
