<header>
  <h1>Companies</h1>
  
  <ul class="actions">
    <li>
      <%= link_to "New Company", new_company_path %>
    </li>
  </ul>
</header>

<div id="companies">
  <%= @companies.each do |company| %>
    <h2><%= link_to company.name, company %></h2>
    <p><%= company.description %></p>
  <% end %>
</div>
