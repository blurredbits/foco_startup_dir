<header>
  <h1>
    <%= @office.name %>
  </h1>

  <ul class="actions">
    <li>
      <%= link_to "Edit Office", edit_office_path(@office), class: "edit" %>
    </li>
    <% admins_only do %>
      <li>
        <%= link_to "Delete Office", admin_office_path(@office), method: :delete, class: "delete" %>
      </li>
    <% end %>
  </ul>
</header>